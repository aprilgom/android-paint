<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_brush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:itemCount="4"
            tools:listitem="@layout/item_brush" />

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/rs_width_change"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:valueFrom="0.0f"
            android:valueTo="100.0f"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_brush" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rs_width_change"
            tools:listitem="@layout/item_color" />

        <Button
            android:id="@+id/btn_color_change"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:elevation="4dp"
            android:text="@string/color_change"
            android:textSize="@dimen/font_size"
            app:layout_constraintDimensionRatio="H, 3:1.3"
            app:layout_constraintEnd_toStartOf="@+id/btn_stroke_change"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_color"
            app:layout_constraintWidth_percent="0.3" />

        <Button
            android:id="@+id/btn_stroke_change"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:elevation="4dp"
            android:text="@string/stroke_change"
            android:textSize="@dimen/font_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="H, 3:1.3"
            app:layout_constraintEnd_toStartOf="@id/btn_brush_change"
            app:layout_constraintStart_toEndOf="@id/btn_color_change"
            app:layout_constraintTop_toTopOf="@id/btn_color_change"
            app:layout_constraintWidth_percent="0.3" />

        <Button
            android:id="@+id/btn_brush_change"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="4dp"
            android:text="@string/brush_change"
            android:textSize="@dimen/font_size"
            app:layout_constraintBottom_toBottomOf="@id/btn_stroke_change"
            app:layout_constraintDimensionRatio="H, 3:1.3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_stroke_change"
            app:layout_constraintTop_toTopOf="@id/btn_color_change"
            app:layout_constraintWidth_percent="0.3" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
