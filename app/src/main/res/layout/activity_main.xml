<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <woowacourse.paint.PainterView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/painter"
        android:layout_width="match_parent"
        android:layout_height="500dp"/>

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/range_slider"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/painter"
        />
    <View
        android:id="@+id/red"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/range_slider"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#FF0000"
        />

    <View
        android:id="@+id/orange"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/range_slider"
        app:layout_constraintStart_toEndOf="@id/red"
        android:background = "#FFA500"
        />

    <View
        android:id="@+id/yellow"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/range_slider"
        app:layout_constraintStart_toEndOf="@id/orange"
        android:background = "#FDFE48"
        />

    <View
        android:id="@+id/green"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/range_slider"
        app:layout_constraintStart_toEndOf="@id/yellow"
        android:background = "#599468"
        />

    <View
        android:id="@+id/blue"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/range_slider"
        app:layout_constraintStart_toEndOf="@id/green"
        android:background = "#0c70f2"
        />

    <TextView
        android:id="@+id/eraser"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="지우개"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/range_slider"
        app:layout_constraintStart_toEndOf="@id/blue"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
